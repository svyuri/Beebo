<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listview_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_background_selector_light"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/time_line_item_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/modelRowOne"
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/modle000"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="centerCrop"
                 />

            <ImageView
                android:id="@+id/modle001"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="centerCrop"
                 />

            <ImageView
                android:id="@+id/modle002"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="centerCrop"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/modelRowTwo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/modelRowOne"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/modle003"
                android:layout_width="80dp"
                android:layout_margin="10dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="centerCrop"
                 />

            <ImageView
                android:id="@+id/modle004"
                android:layout_width="80dp"
                android:layout_margin="10dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="centerCrop"
                 />

            <ImageView
                android:id="@+id/modle005"
                android:layout_width="80dp"
                android:layout_margin="10dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="centerCrop"
                 />
        </LinearLayout>

        <Button
            android:id="@+id/showModelDetail"
            android:background="@drawable/button_background_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelRowTwo"
            android:layout_centerHorizontal="true"
            android:text="查看全部套图" />
    </RelativeLayout>

</RelativeLayout>